---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/UI/SectionContainer.astro";
import Hero from "@/components/aboutMe/Hero.astro";
import AboutMe from "@/components/aboutMe/AboutMe.astro";
import ScrollIndicator from "@/components/UI/ScrollIndicator.astro";
import Experience from "@/components/experience/Experience.astro";
import Projects from "@/components/projects/Projects.astro";
import TechStack from "@/components/techStack/TechStack.astro";
import Contact from "@/components/contact/Contact.astro";
import Footer from "@/components/footer/Footer.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout
  title="Elvin Gonzalez - Full Stack Software Developer"
  description="Portfolio of Elvin Gonzalez, a full stack software developer with over 3 years of experience in high-impact projects, ETL, and modern technologies."
>
  <SectionContainer
    id={i18n.NAVBAR[0].PATH.split("#")[1]}
    class="px-4 z-20 pt-24 md:pt-32 pb-6"
  >
    <Hero />
  </SectionContainer>

  <SectionContainer class="px-4">
    <AboutMe />
  </SectionContainer>

  <SectionContainer
    class="hidden md:flex mt-16 flex-col justify-center items-center"
  >
    <ScrollIndicator />
  </SectionContainer>

  <SectionContainer
    id={i18n.NAVBAR[1].PATH.split("#")[1]}
    class="px-4 pt-20 md:pt-28"
  >
    <Experience />
  </SectionContainer>

  <SectionContainer
    class="px-4 pt-20 md:pt-28"
    id={i18n.NAVBAR[2].PATH.split("#")[1]}
  >
    <Projects />
  </SectionContainer>

  <SectionContainer
    class="px-4 pt-20 md:pt-28"
    id={i18n.NAVBAR[3].PATH.split("#")[1]}
  >
    <TechStack />
  </SectionContainer>

  <SectionContainer
    class="px-4 pt-20 md:pt-28 pb-16"
    id={i18n.NAVBAR[4].PATH.split("#")[1]}
  >
    <Contact />
  </SectionContainer>

  <Footer />
</Layout>
