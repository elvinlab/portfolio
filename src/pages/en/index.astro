---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/UI/SectionContainer.astro";
import Hero from "@/components/aboutMe/Hero.astro";
import AboutMe from "@/components/aboutMe/AboutMe.astro";
import ScrollIndicator from "@/components/UI/ScrollIndicator.astro";
import Experience from "@/components/experience/Experience.astro";

import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout title="elvinlab">
  <SectionContainer
    id={i18n.NAVBAR[0].PATH.split("#")[1]}
    class="px-4 z-20 mt-16 md:mt-[120px] mb-6 flex flex-col justify-start items-center sm:flex-row sm:gap-x-16"
  >
    <Hero />
  </SectionContainer>

  <SectionContainer>
    <AboutMe />
  </SectionContainer>

  <SectionContainer
    class="invisible md:visible flex mt-32 flex-col justify-center items-center"
  >
    <ScrollIndicator />
  </SectionContainer>

  <SectionContainer
    id={i18n.NAVBAR[1].PATH.split("#")[1]}
    class="px-2 md:mt-[120px]"
  >
    <Experience />
  </SectionContainer>

  <SectionContainer class="">
    <div id="invisibleDiv" class="text-4xl text-center">
      <p>Site under construction</p>
      <p>ðŸ˜Œ</p>
    </div>
  </SectionContainer>
  <SectionContainer>
    <div id="invisibleDiv" class="text-5xl"></div>
  </SectionContainer>
</Layout>

<style>
  #invisibleDiv {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  #invisibleDiv p {
    margin: 10px; /* Espacio alrededor del texto */
  }
</style>
