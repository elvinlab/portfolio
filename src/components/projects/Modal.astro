---
import CloseIcon from "../icons/CloseIcon.astro";
import Carousel from "./Carousel.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

interface Props {
  id: string;
  imgs: {
    LINK: string;
    ALT: string;
  }[];
}

const { id, imgs } = Astro.props;
---

<dialog
  id={`projectModal-${id}`}
  class="h-auto w-11/12 md:w-3/5 lg:w-1/2 bg-white dark:bg-slate-900 rounded-xl mt-24 p-0 border border-slate-200 dark:border-slate-800 shadow-2xl"
>
  <div class="flex flex-col w-full">
    <div class="flex items-center justify-between px-5 py-4 border-b border-slate-200 dark:border-slate-800">
      <h4 class="text-lg font-semibold text-slate-900 dark:text-white">
        {i18n.TILES.DEMONSTRATIONS}
      </h4>
      <button
        onclick={`document.getElementById('projectModal-${id}').close();`}
        class="text-slate-400 hover:text-slate-600 dark:hover:text-slate-200 transition-colors cursor-pointer"
      >
        <CloseIcon class="h-6 w-6" />
      </button>
    </div>

    <div class="p-4">
      <Carousel imgs={imgs} id={id} />
    </div>
  </div>
</dialog>

<style>
  dialog[open] {
    animation: appear 0.2s ease-out;
  }

  dialog::backdrop {
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
  }

  @keyframes appear {
    from {
      opacity: 0;
      transform: translateY(-10px) scale(0.98);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
</style>
