---
import NavarList from "@/components/navbar/NavarList.astro";
import NavbarItems from "@/components/navbar/NavbarItems.astro";
import MenuButton from "@/components/navbar/MenuButton.astro";
import LanguageToggle from "@/components/navbar/LanguageToggle.astro";
import ThemeToggle from "@/components/navbar/ThemeToggle.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<header
  class="fixed top-0 left-0 w-full h-16 z-[500] border-b border-slate-200/60 dark:border-slate-800/60 bg-slate-50/80 dark:bg-[#0a0f1e]/80 backdrop-blur-xl transition-colors duration-300"
>
  <div class="w-[90%] max-w-6xl mx-auto h-full flex justify-between items-center">
    <a
      href="/"
      class="font-protest text-3xl text-accent-dark dark:text-accent transition-colors hover:text-accent dark:hover:text-accent-light"
    >
      Elvinlab
    </a>
    <nav class="hidden lg:flex items-center gap-1">
      <NavbarItems>
        {
          i18n.NAVBAR.map((route) => (
            <NavarList
              href={route.PATH}
              label={route.LABEL}
              title={route.TITLE}
            />
          ))
        }
      </NavbarItems>
    </nav>

    <div class="flex items-center gap-2">
      <ThemeToggle />
      <LanguageToggle />
      <MenuButton />
    </div>
  </div>
</header>
