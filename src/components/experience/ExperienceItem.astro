---
import LinkInline from "@/components/experience/LinkInline.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

interface Props {
  COMPANY: string;
  POSITION: string;
  DATE: string;
  DESCRIPTION: string;
  LINK?: string;
  IMG_LINK?: string;
  ALT_TEXT?: string;
}

const { COMPANY, POSITION, DATE, DESCRIPTION, LINK, IMG_LINK, ALT_TEXT } =
  Astro.props;
---

<div
  class="relative grid mx-4 sm:mx-12 pb-12 before:absolute before:left-[-24px] sm:before:left-[-40px] before:block before:h-full before:border-l-2 before:border-slate-200 dark:before:border-slate-800 before:content-[''] md:grid-cols-5 md:gap-10"
>
  <div class="relative pb-8 md:pb-12 md:col-span-2">
    <div class="sticky top-20">
      <span class="absolute -left-[30px] sm:-left-[46px] top-1 h-3 w-3 rounded-full border-2 border-accent bg-white dark:bg-[#0a0f1e]"></span>

      <h3 class="text-lg font-bold text-slate-900 dark:text-white">{COMPANY}</h3>
      <h4 class="font-medium text-sm text-accent-dark dark:text-accent">
        {POSITION}
      </h4>
      <time class="text-xs text-slate-500 dark:text-slate-500 font-mono">
        {DATE}
      </time>
      {
        IMG_LINK && ALT_TEXT && (
          <img
            class="w-[140px] mt-3 rounded-lg border border-slate-200 dark:border-slate-800"
            src={IMG_LINK}
            alt={ALT_TEXT}
          />
        )
      }
    </div>
  </div>
  <div
    class="relative flex flex-col gap-3 pb-4 text-sm leading-relaxed text-slate-600 dark:text-slate-400 md:col-span-3"
  >
    {DESCRIPTION}
    {
      LINK && (
        <LinkInline href={LINK}>
          {i18n.TILES.COMPANY_LINK}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-4 ml-1"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 6l6 6l-6 6" />
            </>
          </svg>
        </LinkInline>
      )
    }
  </div>
</div>
