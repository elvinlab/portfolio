---
import Briefcase from "@/components/icons/Briefcase.astro";
import ExperienceItem from "@/components/experience/ExperienceItem.astro";
import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<h3
  class="flex items-center text-2xl font-semibold gap-x-3 text-slate-900 dark:text-white"
>
  <Briefcase class="size-5 text-accent-dark dark:text-accent" />
  {i18n.TILES.EXPERIENCE}
</h3>
<ol class="relative mt-12">
  {
    i18n.EXPERIENCE.map((experiencie) => (
      <li>
        <ExperienceItem {...experiencie} />
      </li>
    ))
  }
</ol>
