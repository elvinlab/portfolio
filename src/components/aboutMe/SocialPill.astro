---
type Props = {
  to: string;
};

const { to } = Astro.props;
---

<a
  href={to}
  target="_blank"
  rel="noopener noreferrer"
  class="flex items-center border border-slate-300 dark:border-slate-700 text-slate-700 dark:text-slate-300 rounded-lg py-2 px-3 text-sm transition-all duration-200 hover:border-accent dark:hover:border-accent hover:text-accent-dark dark:hover:text-accent hover:bg-accent-muted"
  {...Astro.props}
>
  <slot />
</a>
