---
import Badge from "@/components/UI/Badge.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

import { CURRENT_COMPANY, AVATAR_LINK } from "@/consts";
---

<div class="flex flex-col sm:flex-row items-center gap-6">
  <div class="relative flex-shrink-0">
    <div
      class="absolute -inset-1 rounded-full bg-gradient-to-br from-accent to-teal-600 opacity-60 blur-sm"
    >
    </div>
    <img
      class="relative size-28 sm:size-32 rounded-full ring-2 ring-accent/50 object-cover"
      src={AVATAR_LINK}
      alt="Elvin Gonzalez Avatar"
    />
  </div>

  <div class="text-center sm:text-left">
    <Badge>
      <a href={CURRENT_COMPANY} target="_blank" rel="noopener noreferrer">
        #AlwaysLearning
      </a>
    </Badge>
    <h1
      class="mt-3 text-2xl md:text-3xl lg:text-4xl font-bold text-slate-900 dark:text-white text-balance leading-tight"
    >
      {i18n.ABOUT_ME.SALUTE}
    </h1>
  </div>
</div>
