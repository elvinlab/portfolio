---
import SocialMedia from "@/components/aboutMe/SocialMedia.astro";
import EmailContact from "@/components/aboutMe/EmailContact.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<div class="text-center md:mb-11">
  <h2 class="text-xl lg:text-xl text-balance text-black dark:text-white">
    <span> {i18n.ABOUT_ME.TEXT_SECTION_1}</span>
    <span class="text-yellow-800 dark:text-yellow-200">
      {i18n.ABOUT_ME.TEXT_SECTION_2}
    </span>
    <span class="text-red-800 dark:text-red-200">
      {i18n.ABOUT_ME.TEXT_SECTION_3}
    </span>
  </h2>
</div>
<div class="flex flex-col justify-center items-center">
  <SocialMedia class="mt-6" />
  <EmailContact class="mt-6" />
</div>
