---
import CopyButton from "../UI/CopyButton.astro";
import SendIcon from "../icons/SendIcon.astro";
---

<div class="flex items-center my-4 bg-neutral-900 md:w-[45%] rounded-2xl">
  <input
    class="text-[#bbbbbb] min-w-[85%] bg-transparent text-center text-xl font-bold"
    disabled
    value="elvinlab@outlook.com"
    placeholder="elvinlab@outlook.com"
  />
  <CopyButton />
  <a
    title="Elvin Gonzalez"
    aria-label="Elvin Gonzalez"
    href="mailto:elvinlab@outlook.com"
    class="bg-inherit py-3.5 rounded-r-2xl group"
  >
    <SendIcon
      class="opacity-50 mr-4 group-hover:scale-110 group-hover:opacity-100 transition-all duration-300"
    />
  </a>
</div>
