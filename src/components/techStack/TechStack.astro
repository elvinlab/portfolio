---
import ReactIcon from "@/components/icons/ReactIcon.astro";
import NextJSIcon from "@/components/icons/NextJSIcon.astro";
import TailwindIcon from "@/components/icons/TailwindIcon.astro";
import NodeIcon from "@/components/icons/NodeIcon.astro";
import MongoDBIcon from "@/components/icons/MongoDBIcon.astro";
import FirebaseIcon from "@/components/icons/FirebaseIcon.astro";
import MySqlIcon from "@/components/icons/MySqlIcon.astro";
import AngularIcon from "@/components/icons/AngularIcon.astro";
import LaravelIcon from "@/components/icons/LaravelIcon.astro";
import MaterialIcon from "@/components/icons/MaterialIcon.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const categories = [
  {
    title: "Frontend",
    techs: [
      { name: "React", icon: ReactIcon },
      { name: "Next.js", icon: NextJSIcon },
      { name: "Angular", icon: AngularIcon },
      { name: "TailwindCSS", icon: TailwindIcon },
      { name: "Material UI", icon: MaterialIcon },
    ],
  },
  {
    title: "Backend",
    techs: [
      { name: "Node.js", icon: NodeIcon },
      { name: "Laravel", icon: LaravelIcon },
      { name: "Java", icon: null, svg: "java" },
      { name: ".NET", icon: null, svg: "dotnet" },
    ],
  },
  {
    title: currentLocale === "es" ? "Datos" : "Data",
    techs: [
      { name: "MongoDB", icon: MongoDBIcon },
      { name: "MySQL", icon: MySqlIcon },
      { name: "Firebase", icon: FirebaseIcon },
      { name: "AWS S3", icon: null, svg: "aws" },
    ],
  },
  {
    title: currentLocale === "es" ? "Herramientas" : "Tools",
    techs: [
      { name: "Git", icon: null, svg: "git" },
      { name: "TypeScript", icon: null, svg: "typescript" },
      { name: "Docker", icon: null, svg: "docker" },
      { name: "Astro", icon: null, svg: "astro" },
    ],
  },
];
---

<h3
  class="flex items-center mb-10 text-2xl font-semibold gap-x-3 text-slate-900 dark:text-white"
>
  <svg class="size-5 text-accent-dark dark:text-accent" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
    <path d="M2 17l10 5 10-5"></path>
    <path d="M2 12l10 5 10-5"></path>
  </svg>
  {i18n.TILES.TECH_STACK}
</h3>

<div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
  {
    categories.map((category) => (
      <div>
