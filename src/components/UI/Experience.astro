---
import Briefcase from "@/components/icons/Briefcase.astro";
import ExperienceItem from "@/components/UI/ExperienceItem.astro";
import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<h3
  class="flex items-center mb-6 text-2xl font-semibold gap-x-3 text-black/80 dark:text-white"
>
  <Briefcase class="size-6" />
  {i18n.TILES.EXPERIENCE}
</h3>
<ol class="relative mt-16">
  {
    i18n.EXPERIENCE.map((experiencie) => (
      <li>
        <ExperienceItem {...experiencie} />
      </li>
    ))
  }
</ol>
